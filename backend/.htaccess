# Protein Planet Backend - Security Configuration

# Deny access to all files in backend directory from direct browser access
# API endpoints should only be accessed via AJAX calls from the frontend

<Files "config.php">
    Order allow,deny
    Deny from all
</Files>

# Allow only POST requests to login.php
<Files "login.php">
    <Limit GET>
        Order deny,allow
        Deny from all
    </Limit>
</Files>

# Prevent directory listing
Options -Indexes

# Disable script execution in uploads directory (if you create one)
<FilesMatch "\.(php|php3|php4|php5|phtml|pl|py|jsp|asp|sh|cgi)$">
    Order allow,deny
    Deny from all
</FilesMatch>

